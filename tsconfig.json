{
  "include": [
    "NetscriptDefinitions.d.ts",
    "types.d.ts",
    "src/**/*",
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "paths": {
      "/*.js": [
        "*"
      ],
      "*.js": [
        "*"
      ],
      "@ns": [
        "../NetscriptDefinitions.d.ts"
      ]
    }
  }
}