{
    // Linter Settings
    "typescript.validate.enable": false,
    "javascript.validate.enable": false,
    "eslint.validate": [
        "typescript",
        "typescriptreact"
    ],
    "eslint.workingDirectories": [
        "./src"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": true,
    // Use Non-relative imports so the game can find files in its fake directory structure
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    // Bitburner Extension Settings
    "bitburner.scriptRoot": "./dist/",
    "bitburner.fileWatcher.enable": true,
    // Autosave Settings
    "files.autoSave": "off",
    // Autosnippet settings
    "autoSnippet.snippets": [
        {
            "pattern": "**/*.ts",
            "snippet": "ns-template"
        },
    ],
    "actionButtons": {
        "loadNpmCommands": true,
        "commands": [
            {
                "name": "push",
                "useVsCodeApi": true,
                "command": "ext.bitburner-connector.pushAllFiles"
            }
        ]
    }
}